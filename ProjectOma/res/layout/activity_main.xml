<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:gravity="bottom"
    android:orientation="vertical" >

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <net.frakbot.imageviewex.ImageViewEx
        android:id="@+id/imageViewEx1"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        tools:listitem="@android:layout/simple_list_item_1"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll" >

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button_request"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:onClick="btnRequestClicked"
            android:text="@string/button_request" />

        <Button
            android:id="@+id/button_stock"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"
            android:onClick="btnStockClicked"
            android:text="@string/button_stock" />

        <Button
            android:id="@+id/button_test"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:onClick="btnTestClicked"
            android:text="@string/button_test" />
    </LinearLayout>

</LinearLayout>